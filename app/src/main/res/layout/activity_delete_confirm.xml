<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteConfirmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        android:backgroundTint="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingVertical="25dp"
            android:paddingHorizontal="25dp"
            android:background="@drawable/yellow_dialog"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharpsans_bold"
                android:text="Are you sure you want to delete this account?"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/textIndigo"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-5dp"
                android:lineSpacingExtra="8dp"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="290dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/red_button"
                    android:fontFamily="@font/sharpsans_bold"
                    android:minHeight="70dp"
                    android:letterSpacing="0.05"
                    android:paddingHorizontal="35dp"
                    android:shadowColor="#80FFFFFF"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10"
                    android:text="DELETE"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    app:backgroundTint="@null" />
                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/sharpsans_bold"
                    android:minHeight="70dp"
                    android:letterSpacing="0.05"
                    android:paddingHorizontal="35dp"
                    android:shadowColor="#80FFFFFF"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10"
                    android:text="CANCEL"
                    android:textColor="@color/whitebuttontext"
                    android:textSize="17dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>