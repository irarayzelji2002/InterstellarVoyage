<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOptionsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        android:backgroundTint="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:background="@drawable/yellow_dialog"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/txtMissionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharpsans_bold"
                android:text="OPTIONS"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/textIndigo"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-5dp"/>
            <Button
                android:id="@+id/btnBackToHome"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:layout_gravity="center_horizontal|center"
                android:text="BACK TO HOME"
                android:letterSpacing="0.05"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:shadowColor="#80FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:fontFamily="@font/sharpsans_bold"
                android:layout_marginBottom="-21dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="22dp"
                android:background="@drawable/blue_button"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btnContinueToGame"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:layout_gravity="center_horizontal|center"
                android:text="CONTINUE TO GAME"
                android:letterSpacing="0.05"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:shadowColor="#80FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:fontFamily="@font/sharpsans_bold"
                android:layout_marginBottom="-21dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="22dp"
                android:background="@drawable/blue_button"
                app:backgroundTint="@null" />

            <ImageButton
                android:id="@+id/btnMusic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/blue_button_icon"
                android:backgroundTint="@null"
                android:padding="28dp"
                android:scaleType="fitCenter"
                android:contentDescription="Music"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_music"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>